MPICXX = $(CXX)
#MKLROOT = /opt/intel/Compiler/19.0/1.144/rwthlnk/mkl/
CFLAGS  += -I/usr/include/mkl -O3 -I./ -std=gnu99  -fopenmp -gdwarf-4 -fno-omit-frame-pointer -fopenmp-version=50 -fsanitize=thread -DUSE_TSAN_ANNOTATIONS
